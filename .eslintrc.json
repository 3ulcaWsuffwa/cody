{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": ["react", "jsx-a11y"],
  "globals": {
    "SyntheticEvent": true
  },
  "rules": {
    "semi": "error",
    "jsx-a11y/label-has-for": [
      "error",
      {
        "required": { "every": ["id"] }
      }
    ]
  }
}
